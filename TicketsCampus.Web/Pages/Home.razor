@page "/"

<PageTitle>Crear Ticket</PageTitle>

<h3 class="mb-3">Crear nuevo ticket</h3>

<EditForm Model="@_ticket" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="mb-3">
        <label for="title" class="form-label">Título</label>
        <InputText id="title" class="form-control" @bind-Value="_ticket.Title"/>
        <ValidationMessage For="@(() => _ticket.Title)"/>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Descripción</label>
        <InputTextArea id="description" class="form-control" @bind-Value="_ticket.Description"/>
        <ValidationMessage For="@(() => _ticket.Description)"/>
    </div>

    <button type="submit" class="btn btn-primary">Crear Ticket</button>
</EditForm>

@if (_successMessage != null)
{
    <div class="alert alert-success mt-3">@_successMessage</div>
}